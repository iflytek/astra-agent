<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iflytek.astra.console.commons.mapper.user.ChatUserMapper">

    <update id="updateIsAbleByUid" >
        UPDATE chat_user
        SET is_able = #{isAble}
        WHERE uid = #{uid}
    </update>
    <select id="selectUserByUidSet" resultType="com.iflytek.astra.console.commons.entity.user.ChatUser">
        SELECT uid,mobile,nickname FROM chat_user WHERE uid IN
        <foreach collection="creatorUidSet" item="creatorUid" index="index" open="(" close=")" separator=",">
            #{creatorUid}
        </foreach>
        group by uid;
    </select>

</mapper>
